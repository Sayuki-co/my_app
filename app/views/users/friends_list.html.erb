<% provide(:title, 'friends_list') %>
<%= image_tag 'user/user-line.png', class: 'user-line-img' %>
<div class="container">
    <p class="title">Friends List</p>
    <% if @receive_friends.present? %>
        <a href="#receive_friend" class="friends-tag">■ Friendリクエストが届きました！<%= @receive_friends.count %></a>
    <% end %>
    <% if @request_friends.any? %>
        <a href="#request_friends" class="friends-tag">■ Friendリクエスト中！<%= @request_friends.count %></a>
    <% end %>
    <% if @friends.any? %>
        <div class="row friends-list list-border">
            <P>■ Frinds <span class="count"><%= @friends.count %></span></P>
            <div class="col-sm-2">
                <%= image_tag 'user/friend.png', class: 'status-img' %>
            </div>
            <div class="col-sm-10">
                <ul>
                    <%= render partial: 'users/list/friend', collection: @friends %>
                </ul>
            </div>
        </div>
    <% end %>
    <% if @receive_friends.present? %>
        <div class="row friends-list list-border" id="receive_friend">
            <p>■ Friendリクエストが届きました！　<span class="count"><%= @receive_friends.count %></span></p>
            <div class="col-sm-2">
                <%= image_tag 'user/receive.png', class: 'receive-status-img' %>
            </div>
            <div class="col-sm-10">
                <ul>
                    <%= render partial: 'users/list/receive_friend', collection: @receive_friends %>
                </ul>
            </div>
        </div>
    <% end %>
    <% if @request_friends.any? %>
        <div class="row friends-list" id="request_friends">
            <p>■ Friendリクエスト中！　<span class="count"><%= @request_friends.count %></span></p>
            <div class="col-sm-2">
                <%= image_tag 'user/request.png', class: 'request-status-img' %>
            </div>
            <div class="col-sm-10">
                <ul>
                    <%= render partial: 'users/list/request_friend', collection: @request_friends %>
                </ul>
            </div>
        </div>
    <% end %>
</div>  
  