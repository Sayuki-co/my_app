<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
  <%= render 'layouts/header' %>
    
    <% flash.each do |key, value| %>
      <div class="alert <%= bootstrap_class_for(key) %>"><%= value %></div>
    <% end %>
<%= yield %>
<%= debug(params) if Rails.env.development? %>

<% if signed_in? %>
  <ul>
    <li><%= link_to "投稿", '#', class: "fixed-post" %></li>
    <li><%= link_to "My Page", current_user, class: "fixed-myPage" %></li>
    <li><%= link_to "Logout", destroy_user_session_path, method: "delete", class: "fixed-logout" %></li>
    <li id="fat-menu" class="dropdown">
        <a href="#" class="dropdown-toggle fixed-menu" data-toggle="dropdown">
          Menu <b class="caret"></b>
        </a>
        <ul class="dropdown-menu fixed_details">
          <li><%= link_to "がくしゅう", '#' %></li>
          <li><%= link_to "けんこう", '#' %></li>
          <li><%= link_to "りょうり", '#' %></li>
          <li><%= link_to "おでかけ", '#' %></li>
          <li><%= link_to "くらし", '#' %></li>
          <li><%= link_to "りょこう", '#' %></li>
          <li><%= link_to "etc...", '#' %></li>
          <li><%= link_to "投稿index", '#' %></li>
          <li><%= link_to "Member list", users_path %></li>
        </ul>
    </li>
  </ul>
<% end %> 
  
<script>
  $(function() {
    $('.login-img').hover(
      function() {
        $(this).css({'left':'0', 'bottom':'0'});
      },
      function() {
        $(this).css({'left':'-112px', 'bottom': '-100px'});
      }
    );
    
    $('.signUp-img').hover(
      function() {
        $(this).css({'right':'0', 'top':'0'});
      },
      function() {
        $(this).css({'right':'0', 'top': '-120px'});
      }
    );
    
  });
</script>
</body>
</html>
